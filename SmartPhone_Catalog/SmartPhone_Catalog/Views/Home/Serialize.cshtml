@using System.Runtime.InteropServices.ComTypes
@model ViewComponent

<div style="background: lightgray; text-align: center;">
    <strong>

        @if (ViewBag.Success != null)
        {
            if (ViewBag.Success)
            {
                <i style="color: darkred">Unknown problem occured when adding the data to the database.</i>
            }
        }

        @if (ViewBag.IncorrectFormat != null)
        {
             <i style="color: darkred">Unknown problem occured.</i>
        }

        @if (ViewBag.FilesInfo != null)
        {
            @:<h4>Xml File Validation</h4>
            foreach (var file in ViewBag.FilesInfo)
            {
                @:<div>
                @file.Key;
                
                if (file.Value)
                {
                    @:<i style="color: forestgreen"> YES </i>
                }
                else
                {
                    @:<i style="color: red"> NO </i>
                }
                @:</div>
            }
        }
    </strong >
</div>